##设置css自定义样式
#setCss()
##设置导航栏
#breadcrumbs("重置密码")
<div class="page-content">
    <div class="row">
        <form id="reset-pwd-form" class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">旧密码</label>
                <div class="col-sm-9">
                    <input type="password"  name="oldPwd" placeholder="old password" class="col-xs-10 col-sm-5 required"  minlength="6" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">新密码</label>
                <div class="col-sm-9">
                    <input type="password" id="newPwd" name="newPwd" placeholder="new password" class="col-xs-10 col-sm-5 required" minlength="6"/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">确认密码</label>
                <div class="col-sm-9">
                    <input type="password"  placeholder="check password" class="col-xs-10 col-sm-5" equalTo="#newPwd" />
                </div>
            </div>

            <div class="space-4"></div>



            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info btn-sumbit" type="button"><i class="icon-ok bigger-110"></i>提交</button>
                    &nbsp; &nbsp; &nbsp;
                    <button class="btn btn-pwd-reset" type="reset"><i class="icon-undo bigger-110"></i>重置</button>
                </div>
            </div>

        </form>
    </div><!-- /.row -->
</div><!-- /.page-content -->
#setJs("/jibinfoFinance/manager/js/finance/index/reset_pwd.js")